<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" >
        <shape>
            <solid
                android:color="#262706" />
            <stroke
                android:width="2dp"
       android:color="#767678" />
            <corners
                android:radius="10dp" />
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
        </shape>
    </item>
    <item android:state_enabled="false"
          >
        <shape>

            <gradient
                android:startColor="#a5a7a3"
                android:centerColor="#a5a7a3"
                android:endColor="#ffffff"
                android:angle="90"/>
            <stroke
                android:width="2dp"
                android:color="#767678" />
            <corners
                android:radius="10dp" />
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
        </shape>
    </item>
